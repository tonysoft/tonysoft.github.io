{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 1100,
  "height": 800,
  "padding": 25,

  "signals": [
    {
      "name": "labels", "value": true,
      "bind": {"input": "checkbox"}
    },
    {
      "name": "layout", "value": "tidy",
      "bind": {"input": "radio", "options": ["tidy", "cluster"]}
    },
    {
      "name": "hover",
      "value": null,
      "on": [
        {"events": "@dot:mouseover", "update": "datum"},
        {"events": "@dot:mouseout", "update": "null"},
        {"events": "@text:mouseover", "update": "datum"},
        {"events": "@text:mouseout", "update": "null"}
      ]
    },
    {
      "name": "title",
      "value": "Org Chart",
      "update": "hover ? hover.name + (hover.metric ? ', ' + hover.metric + '' : '') : ''"
    },
    {
      "name": "links", "value": "diagonal",
      "bind": {
        "input": "select",
        "options": ["line", "curve", "diagonal", "orthogonal"]
      }
    }
  ],

  "data": [
    {
      "name": "tree",
      "url": "https://tonysoft.github.io/vegaTest/MetrosFromAT.json",
      "transform": [
        {
          "type": "stratify",
          "key": "id",
          "parentKey": "parent"
        },
        {
          "type": "tree",
          "method": {"signal": "layout"},
          "size": [{"signal": "height"}, {"signal": "width"}],
          "as": ["y", "x", "depth", "children"]
        }
      ]
    },
    {
      "name": "links",
      "source": "tree",
      "transform": [
        { "type": "treelinks" },
        {
          "type": "linkpath",
          "orient": "horizontal",
          "shape": {"signal": "links"}
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "linear",
      "range": {"scheme": "lighttealblue"},
      "domain": {"data": "tree", "field": "depth"},
      "zero": false
    }
  ],

  "marks": [
    {
      "type": "path",
      "from": {"data": "links"},
      "encode": {
        "update": {
          "path": {"field": "path"},
          "stroke": {"value": "#888"}
        }
      }
    },
    {
      "type": "symbol",
      "name": "dot",
      "from": {"data": "tree"},
      "encode": {
        "enter": {
          "shape":  {"value": "square"},
          "size": {"value": 300},
          "id": {"field": "name"},
          "stroke": {"value": "#000"},
          "strokeWidth": {"value": 2}
        },
        "update": {
          "x": {"field": "x"},
          "y": {"field": "y"},
          "fill": {"scale": "color", "field": "depth"}
        }
      }
    },
    {
      "type": "text",
      "name": "text",
      "from": {"data": "tree"},
      "encode": {
        "enter": {
          "text": {"field": "name"},
          "fontSize": {"value": 8},
          "baseline": {"value": "middle"}
        },
        "update": {
          "x": {"field": "x"},
          "y": {"field": "y"},
          "fill": {"value": "white"},
          "dx": {"signal": "datum.children ? 11 : -11"},
          "align": {"signal": "datum.children ? 'right' : 'left'"},
          "opacity": {"signal": "labels ? 1 : 0"}
        }
      }
    },
    {
      "type": "text",
      "interactive": false,
      "encode": {
        "enter": {
          "x": {"value": 0},
          "y": {"value": 0},
          "fill": {"value": "black"},
          "fontSize": {"value": 20},
          "align": {"value": "left"}
        },
        "update": {
          "text": {"signal": "title"}
        }
      }
    }
  ]
}